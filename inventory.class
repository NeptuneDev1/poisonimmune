package me.proiezrush.posionimmune.utility;

import org.bukkit.Bukkit;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

public class Inventory {
  private Inventory inventory;
  private int size;
  private String name;
  
  public Inventory(int size, String name) {
    this.size = size;
    this.name = name;
    this.inventory = Bukkit.createInventory(null, this.size, this.name);
  }

  
  public void addItem(ItemStack item, int slot) { getInventory().setItem(slot, item); }


  
  public Inventory getInventory() { return this.inventory; }


  
  public int getSize() { return this.size; }


  
  public String getName() { return this.name; }
}
